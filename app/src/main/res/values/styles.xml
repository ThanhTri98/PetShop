<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.MaterialComponents.Light.NoActionBar.Bridge">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimary</item>
        <item name="colorAccent">@color/colorAccent</item>
        <item name="android:colorControlHighlight">@color/colorControlHighlight</item>
        <item name="boxCornerRadiusBottomEnd">0dp</item>
        <item name="boxCornerRadiusBottomStart">0dp</item>
        <item name="boxCornerRadiusTopEnd">0dp</item>
        <item name="boxCornerRadiusTopStart">0dp</item>
    </style>

    <style name="AppSearchView" parent="Widget.AppCompat.SearchView">
        <item name="android:textSize">16sp</item>
    </style>

    <style name="MyTextInputEditText" parent="Widget.MaterialComponents.TimePicker.Display.TextInputEditText">
        <item name="android:textColor">@android:color/black</item>
        <item name="strokeColor">@android:color/black</item>
        <item name="boxStrokeColor">@android:color/black</item>
        <item name="background">@android:color/black</item>
    </style>

    <style name="SdkVNShopTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <item name="colorPrimaryDark">@color/colorPrimary</item>//Màu Status color
        <item name="colorButtonNormal">@android:color/white</item>
        <item name="android:statusBarColor" tools:targetApi="lollipop">?attr/colorPrimaryDark</item>
    </style>

    <style name="LoadingDialogVNshopTheme" parent="Theme.AppCompat.Light.Dialog">
        <item name="colorPrimary">@color/colorPrimary</item>//Màu loading view
        <item name="colorButtonNormal">@android:color/white</item>
        <item name="android:statusBarColor" tools:targetApi="lollipop">?attr/colorPrimaryDark</item>
        <item name="android:background">@android:color/white</item>
    </style>

