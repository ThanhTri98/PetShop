<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="5dp"
    android:background="@color/colorVerifyTransparent"
    android:padding="5dp">

    <ImageView
        android:id="@+id/ivStatus"
        android:layout_width="70dp"
        android:layout_height="70dp"
        android:layout_centerVertical="true"
        android:layout_marginEnd="10dp"
        android:contentDescription="@string/AppName"
        android:src="@drawable/ic_success" />

    <TextView
        android:id="@+id/tvStatus"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_toEndOf="@+id/ivStatus"
        android:textColor="@color/colorVerify"
        android:textSize="16sp"
        android:textStyle="bold" />

    <TextView
        android:id="@+id/tvPayment"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/tvStatus"
        android:layout_toEndOf="@+id/ivStatus"
        android:text="@string/thanh_toan_qua"
        android:textColor="@color/colorTextDefault"
        android:textSize="16sp" />

    <TextView
        android:layout_marginStart="2dp"
        android:id="@+id/tvPayments"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/tvStatus"
        android:layout_toEndOf="@+id/tvPayment"
        android:textColor="@color/colorVerify"
        android:textSize="16sp"
        android:textStyle="bold|italic" />

    <TextView
        android:id="@+id/tvAmount"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/tvPayment"
        android:layout_toEndOf="@+id/ivStatus"
        android:textColor="@color/colorTextDefault"
        android:textSize="16sp" />

    <TextView
        android:id="@+id/tvTime"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/tvAmount"
        android:layout_toEndOf="@+id/ivStatus"
        android:textColor="@color/colorTextDefault"
        android:textSize="13sp"
        android:textStyle="italic" />
</RelativeLayout>