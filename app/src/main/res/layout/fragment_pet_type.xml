<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".Views.Fragments.PostTypeFragment">

    <RadioGroup
        android:id="@+id/rdGroup"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        tools:ignore="UselessParent">

        <RadioButton
            android:paddingVertical="8dp"
            android:id="@+id/rdbtnDog"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/bg_rd_selector"
            android:button="@android:color/transparent"
            android:drawableEnd="@drawable/bg_rd_ic_end_selector"
            android:paddingHorizontal="15dp"
            android:text="@string/PTDog"
            android:textColor="@drawable/bg_rd_text_color_selector"
            android:textSize="15sp" />

        <RadioButton
            android:paddingVertical="8dp"
            android:id="@+id/rdbtnCat"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/bg_rd_selector"
            android:button="@android:color/transparent"
            android:drawableEnd="@drawable/bg_rd_ic_end_selector"
            android:paddingHorizontal="15dp"
            android:text="@string/PTCat"
            android:textColor="@drawable/bg_rd_text_color_selector"
            android:textSize="15sp" />
    </RadioGroup>

</LinearLayout>