<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="7dp"
    android:background="@drawable/shadow">

    <RelativeLayout
        android:id="@+id/rl"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="10dp">

        <RelativeLayout
            android:id="@+id/rlImage"
            android:layout_width="90sp"
            android:layout_height="70sp"
            android:layout_centerVertical="true"
            android:layout_marginEnd="10dp">

            <TextView
                android:id="@+id/tvImgCount"
                android:layout_width="18dp"
                android:layout_height="18dp"
                android:layout_alignParentEnd="true"
                android:layout_margin="3dp"
                android:background="@drawable/bg_border_circle"
                android:backgroundTint="@color/white"
                android:elevation="2dp"
                android:gravity="center"
                android:includeFontPadding="false"
                android:text="4"
                android:textColor="@color/colorTextDefault"
                android:textSize="12sp"
                android:textStyle="bold|italic" />

            <androidx.cardview.widget.CardView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                app:cardCornerRadius="3dp"
                app:cardElevation="0dp">

                <ImageView
                    android:id="@+id/ivImage"
                    android:layout_width="90sp"
                    android:layout_height="70dp"
                    android:contentDescription="@string/AppName"
                    android:scaleType="fitXY"
                    android:src="@drawable/cat1" />
            </androidx.cardview.widget.CardView>
        </RelativeLayout>


        <TextView
            android:id="@+id/tvTitle"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_toEndOf="@+id/rlImage"
            android:text="Mèo xinh quá các bạn, mình muốn bán nè hi hi"
            android:textColor="@color/colorTextDefault" />

        <TextView
            android:id="@+id/tvPrice"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/tvTitle"
            android:layout_marginTop="5dp"
            android:layout_toEndOf="@+id/rlImage"
            android:text="2.000.000 đ"
            android:textColor="@color/grey_font"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/tvStatus"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/tvPrice"
            android:layout_marginStart="3dp"
            android:layout_toEndOf="@+id/iv"
            android:text="Bị từ chối (thông tin sai)"
            android:textColor="@color/colorRedDark"
            android:textSize="13sp" />

        <ImageView
            android:id="@+id/iv"
            android:layout_width="18dp"
            android:layout_height="18dp"
            android:layout_below="@+id/tvPrice"
            android:layout_toEndOf="@+id/rlImage"
            android:contentDescription="@string/AppName"
            android:src="@drawable/ic_baseline_info_24" />

        <Button
            android:id="@+id/btnEdit"
            android:layout_width="80dp"
            android:layout_height="35dp"
            android:layout_alignBottom="@+id/iv"
            android:layout_alignParentEnd="true"
            android:background="#1D009688"
            android:drawableStart="@drawable/ic_edit_20"
            android:drawableTint="#009688"
            android:gravity="center"
            android:paddingHorizontal="5dp"
            android:text="Sửa tin"
            android:textAllCaps="false"
            android:textColor="#009688"
            android:textSize="13sp" />
    </RelativeLayout>
</RelativeLayout>